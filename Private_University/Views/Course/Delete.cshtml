@model Private_University.Models.University_Course_details

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <h3 style="text-align:center;">Are you sure you want to delete this course ?</h3>
    <div>
        <hr />
        @using (Html.BeginForm("Delete", "Course", FormMethod.Post, new { Class = "s12" }))
        {
            @Html.AntiForgeryToken()
        <table class="table table-condensed" style="width:auto;margin:auto;">
            <tr>
                <td>Course ID</td>
                <td>@Html.DisplayFor(model => model.Univ_Course_ID)</td>
            </tr>
            <tr>
                <td>Course Name</td>
                <td> @Html.DisplayFor(model => model.CourseName)</td>
            </tr>
            <tr>
                <td>Course Code</td>
                <td> @Html.DisplayFor(model => model.Univ_Course_Code)</td>
            </tr>
            <tr>
                <td>Duration of Course</td>
                <td>@Html.DisplayFor(model => model.CourseDuration)</td>
            </tr>
            <tr>
                <td>Branch/specialization Name</td>
                <td>@Html.DisplayFor(model => model.SubCourseName)</td>
            </tr>
            <tr>
                <td>Branch Code</td>
                <td>@Html.DisplayFor(model => model.Univ_subCourse_Code)</td>
            </tr>
           
            <tr>
                <td>
                       
                        @Html.HiddenFor(model => model.Univ_subCourse_ID)
                        @Html.HiddenFor(model => model.Univ_Course_ID)
                        <input type="submit" value="Delete" class="btn btn-primary" />
                   
                </td>
                <td>                   
                    @Html.ActionLink("Back to List", "CourseRpt", new { Type = 1 }, new { @class = "btn btn-success" })
                </td>
            </tr>
        </table>
        }
    </div>
</body>
</html>
