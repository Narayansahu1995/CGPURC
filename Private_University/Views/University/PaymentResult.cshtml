@{
    ViewBag.Title = "Payment Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="pop-cour">
    <div class="container com-sp pad-bot-70">
        <div class="row">
            <div class="col-md-12">
                <div class="cor-p4">
                    <p>Payment Transaction Status: <strong>@ViewBag.TxnStatus</strong></p>
                    <p>Order ID: <strong>@ViewBag.OrderId</strong></p>
                    <p>Transaction Number: <strong>@ViewBag.TxnNumber</strong></p>
                    <p>Amount in Rupees: <strong>@ViewBag.TxnAmt</strong></p>
                </div>
            </div>
        </div>
    </div>
</section>
