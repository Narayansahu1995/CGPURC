@using Private_University.Models;
@model Private_University.Models.News

@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
        </li>
        <li class="active-bre">
            <a href="#">Dashboard</a>
        </li>
        <li class="page-back">
            <a href="@Url.Action("Index","News")"><i class="fa fa-backward" aria-hidden="true"></i>Back to News List</a>
        </li>

    </ul>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp admin-form">
                <div class="inn-title">
                    <h4>ADD News</h4>
                </div>
                <div class="tab-inn">
                    @using (Html.BeginForm("AddNews", "News", FormMethod.Post, new { enctype = "multipart/form-data", Class = "s12" }))
                    {
                        @Html.AntiForgeryToken()
                        AuthenticationResponse ARespo = (AuthenticationResponse)Session["AuthResponse"];
                        <div class="form-horizontal">

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.News_Title, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.News_Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.News_Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                @*<div class="form-group">
                                    @Html.LabelFor(model => model.News_Descrip, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.News_Descrip, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.News_Descrip, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@

                                <div class="form-group">
                                    @Html.LabelFor(model => model.News_Descrip, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div ass="col-md-6">
                                        @Html.TextAreaFor(model => model.News_Descrip, new { @id = "News_Descrip", @class = "form-control", @rows = "200" }) @Html.ValidationMessageFor(model => model.News_Descrip, "", new { @class = "text-danger" })
                                        <script>CKEDITOR.replace("News_Descrip");</script> 
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.News_File, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        <input type="file" name="File_Upload" required accept="image/jpg, image/jpeg, application/pdf" />
                                        @Html.ValidationMessageFor(model => model.News_File, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.Entry_By, new { Value = ARespo.Login_ID })
                                        @Html.HiddenFor(model => model.News_File, new { Value = "FileName" })
                                    </div>
                                </div>

                                @Html.HiddenFor(model => model.Entry_By, new { Value = ARespo.Login_ID })
                                <div class="form-group">
                                    <div class="col-md-offset-6 col-md-6">
                                        <input type="submit" value="Create" class="waves-effect waves-light light-btn waves-input-wrapper waves-button-input" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
