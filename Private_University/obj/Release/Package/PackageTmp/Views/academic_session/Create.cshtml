@using Private_University.Models;
@model Private_University.Models.Master_Session_Insert
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="sb2-2-2">
    <ul>
        <li>
            <a href="Dashboard"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="Dashboard">Dashboard</a>
        </li>
        <li class="page-back">
            <a href="Index"><i class="fa fa-backward" aria-hidden="true"></i> Back to Academic Session</a>
        </li>
    </ul>
</div>
@{
    if (TempData["Msg"] != null)
    {
        @Html.Raw(TempData["Msg"])

    }
}
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp admin-form">
                <div class="inn-title">
                    <h4>NEW ACADEMIC SESSION</h4>
                </div>
                <div class="tab-inn">

                    @using (Html.BeginForm("Create", "academic_session", FormMethod.Post, new { Class = "s12" }))
                    {
                        @Html.AntiForgeryToken()
                        AuthenticationResponse ARespo = (AuthenticationResponse)Session["AuthResponse"];

                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="input-field col s12">
                                @Html.TextBoxFor(model => model.Session_Name, new { Class = "validate" })
                                @Html.LabelFor(model => model.Session_Name)
                                @Html.ValidationMessageFor(model => model.Session_Name, "", new { Class = "text-danger" })
                                @Html.HiddenFor(model => model.Entry_By, new { Value = ARespo.Login_ID })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="waves-effect waves-light btn-large waves-input-wrapper" style="">
                                    <input type="submit" value="Create" class="waves-button-input" />
                                </i>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="input-field col s12">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

