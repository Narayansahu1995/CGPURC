@model IEnumerable<Private_University.Models.University_Course_details>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CourseRpt</title>

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery-1.7.1.min.js"></script>
    <style type="text/css">
        tr:hover {
            background-color: #adff2f2e;
        }
        tr:first-child:hover{
            background-color:#337ab7;
        }  
        
        .Edit_Img
        {
            background: url('data:image/png;base64,') no-repeat;
            display: block;           
            height: 34px;
            text-indent: -9999px; /* hides the link text */
        }
        .Delete_Img 
        {
            background: url('data:image/png;base64,') no-repeat;
            display: block;           
            height: 34px;
            text-indent: -9999px; /* hides the link text */
        }
             
    </style>
</head>
<body>
    @Html.Raw(TempData["FinalMsg"])
    <h3 style="text-align:center;">Courses Details</h3>
    <table class="table table-bordered" style="width:96%;margin:auto auto 20px auto;">
        <tr class="bg-primary" style="position:sticky; top:-1px;">          
            <th>
                @Html.DisplayNameFor(model => model.count)
            </th>           
            <th>
                Course ID
            </th>
            <th>
               Course Name (Course Code) <br/>Course Duration
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCourseName)<br/> (Branch Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfStudent)
            </th>
          @if(@Request.QueryString["Type"] == "1")
           {
            <th>Edit</th>
            <th>Delete</th>
           }
        </tr>
      @{ 
          int RC = 0;
      }
        @foreach (var item in Model)
        {
      
            <tr>                           
                
              @if(RC != item.count)
              { 
                <td rowspan="@item.NoOfBranches">
                    @Html.DisplayFor(modelItem => item.count) 
                </td>
                    <td rowspan="@item.NoOfBranches">
                        @Html.DisplayFor(modelItem => item.Univ_Course_ID)
                    </td>
                    <td rowspan="@item.NoOfBranches">
                        <b>@Html.DisplayFor(modelItem => item.CourseName) </b>
                        <b> (@Html.DisplayFor(modelItem => item.Univ_Course_Code))</b><br/>
                        @Html.DisplayFor(modelItem => item.CourseDuration)
                    </td>
             
              }
            



              
                <td>
                    <b>@Html.DisplayFor(modelItem => item.SubCourseName)</b><br/>
                    (@Html.DisplayFor(modelitem => item.Univ_subCourse_Code))
                </td>
              

                <td>
                    @Html.DisplayFor(modelItem => item.NoOfStudent)
                </td>

                @if (@Request.QueryString["Type"] == "1")
                {
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { bid=item.Univ_subCourse_ID, cid = item.Univ_Course_ID  }, new { @class = "btn btn-primary btn-sm"})*@
                    @Html.ActionLink("Edit", "Edit", new { bid = item.Univ_subCourse_ID, cid = item.Univ_Course_ID }, new { @class = "Edit_Img" })
                    

                </td>  
                if (item.NoOfStudent == 0)
                {
                <td>
                    @*@Html.ActionLink("Delete", "Delete", new { bid = item.Univ_subCourse_ID, cid = item.Univ_Course_ID }, new { @class = "btn btn-primary btn-sm" })*@                    
                    @Html.ActionLink("Delete", "Delete", new { bid = item.Univ_subCourse_ID, cid = item.Univ_Course_ID }, new { @class = "Delete_Img" })

                </td>
                }
                else
                {
                    <td>
                        
                    </td>
                }
                }
            </tr>

            RC = item.count;
        }

    </table>
</body>
</html>
