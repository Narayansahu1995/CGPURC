@model IEnumerable<Private_University.Models.master_office_bearer>

@{
    ViewBag.Title = "OfficeBearers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var language = @ViewData["lang"];
}
<section class="pop-cour">
    <div class="container">
        <div class="row">
            <div class="cor about-sp">
                <div class="ed-about-tit">
                    <div class="con-title" style="margin-top: 40px;">
                        <h2>@Html.Label(Private_University.Resources.OfficeBearers.TitleOne, new { @class = "con-title-h2" }) <span>@Html.Label(Private_University.Resources.OfficeBearers.TitleTwo, new { @class = "con-title-h2-span" })</span></h2>
                        <p>@Html.Label(Private_University.Resources.OfficeBearers.Subject, new { @class = "con-title-p" }) </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--SECTION START-->
<section>
    <div class="pop-cour">
        <div class="container pad-bot-70">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3" style="height: 376px;">
                        <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); max-width: 300px; text-align: center; font-family: arial; margin-bottom: 80px; margin-top: 30px;">
                            <img src="@Url.Content("~/File_Bearer/" + item.Picture)" alt="@Html.DisplayFor(modelItem => item.Name)" style="width:100%; height:250px;">
                           
                                <h4><b>@Html.DisplayFor(modelItem => item.Name, new { @class = "text-center font-weight-bold" })</b></h4>
                                <p class="text-center">@Html.DisplayFor(modelItem => item.Designation, new { @class = "text-center" })</p>
                          
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
</section>
<!--SECTION END-->
