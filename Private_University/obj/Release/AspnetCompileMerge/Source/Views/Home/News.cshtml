@model IEnumerable<Private_University.Models.News>

@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="pop-cour">
    <div class="container">
        <div class="row">
            <div class="cor about-sp">
                <div class="ed-about-tit">
                    <div class="con-title" style="margin-top: 40px;">
                        <h2>@Private_University.Resources.News.Title</h2>
                        <p>@Private_University.Resources.News.CommName</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container com-sp">
        <div class="row">
            <div class="cor about-sp">
                <div class="ed-about-tit">
                        <div class="ho-event pg-eve-main">
                            <ul>
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <div class="ho-ev-date pg-eve-date">
                                            <span>News</span>
                                        </div>
                                        <div class="ho-ev-link pg-eve-desc">
                                            <a>
                                                <h4>@Html.DisplayFor(modelItem => item.News_Title)</h4>
                                            </a>
                                            <p>@Html.Raw(item.News_Descrip)</p>
                                        </div>
                                        <div class="pg-eve-reg">
                                            <a href="~/File_News/@item.News_File" target="_blank">View</a>
                                        </div>
                                    </li>
                                }
                            </ul>
                    </div>
