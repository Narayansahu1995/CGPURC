@model IEnumerable<Private_University.Models.PGTxnList>
@using Private_University.Models;

@{
    ViewBag.Title = "PGtxnRpt";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp admin-form">
                <div class="inn-title">
                    <h4>Payments Detail</h4>
                </div>
                <div class="tab-inn">
                    @using (Html.BeginForm("PGtxnRpt", "University", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        AuthenticationResponse ARespo = (AuthenticationResponse)Session["AuthResponse"];
                        <div class="form-horizontal">
                            <table class="table table-bordered" style="width:auto;margin:auto;" id="Flist">
                                <thead>
                                    <tr>
                                        <th>SNo </th>
                                        <th>Fees Month</th>
                                        <th>Transection No</th>
                                        <th>Order Id</th>                                      
                                        <th>One Percent Amount</th>
                                        <th>Penal Interest</th>
                                        <th>Total Amount</th>
                                        <th>Attempts</th>
                                        <th>Status</th> 
                                        <th>Date & Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() != 0 || Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.count)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FeesMonth)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TxnNumber)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OrderId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OnePerAmt)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Penal_Interest)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Attempts)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PG_Status)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TxnDateTime)
                                                </td>
                                             
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" style="text-align:center;">
                                                No Records Found
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

