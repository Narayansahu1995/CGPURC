@model IEnumerable<Private_University.Models.UniversityWorkDetail>

@{
    ViewBag.Title = "WorkReport";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp admin-form">
                <div class="inn-title">
                    <h4>Students Details</h4>
                </div>
                <div class="tab-inn">
                    <table class="table table-bordered" style="width:auto;margin:auto;" id="Flist">
                        <thead style="background-color: lightgoldenrodyellow;">
                            <tr>
                                <th style="font-weight:bold;">SNo.</th>
                                <th style="font-weight:bold;">University Name</th>
                                <th style="font-weight:bold;">No. Of Courses</th>
                                <th style="font-weight:bold;">No. Of Branches </th>
                                <th style="font-weight:bold;">No.Of Students</th>
                            </tr>
                          </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.count)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UniversityName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoOfCourses)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoOfBranches)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoOfStudents)
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" style="font-weight:bold; text-align:center;">Total :-</td>
                                <td style="font-weight:bold;">@Model.Sum(m => m.NoOfStudents)</td>
                            </tr>
                        </tfoot>
</table>
                </div>
            </div>
        </div>
    </div>
  </div>