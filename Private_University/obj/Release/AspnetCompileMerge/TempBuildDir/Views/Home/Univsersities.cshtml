@model IEnumerable<Private_University.Models.UniversityFrontShow>
@{
    ViewBag.Title = "UniversityList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- POPULAR COURSES -->
<section class="pop-cour">
    <div class="container com-sp pad-bot-70">
        <div class="row">
            <div class="con-title">
                <h2>About <span>Universities</span></h2>
                <p>List of Universities are here.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div>
                        <!--POPULAR COURSES-->
                        <div class="home-top-cour">
                            <!--POPULAR COURSES IMAGE-->


                            <div class="col-md-3">
                                @if (item.Univsersity_Logo != string.Empty)
                                {
                                    <img src="@Url.Content("~/UniversityLogo/" + item.Univsersity_Logo)" style="margin-top: 10px; height:100px;     object-fit: scale-down;">
                                }
                                else
                                {
                                }
                            </div>


                            <!--POPULAR COURSES: CONTENT-->
                            <div class="col-md-9 home-top-cour-desc">
                                <a href="@Url.Action("UniversityProfile", "Home", new { id = item.University_ID})">
                                    <h3>@Html.DisplayFor(modelItem => item.University_Name)</h3>
                                </a>
                                <h4 style="height: 52px;">@Html.DisplayFor(modelItem => item.Address)</h4>
                                @*<p>@Html.DisplayFor(modelItem => item.University_Details)</p>*@
                                <span class="home-top-cour-rat" data_toggle="tooltip" title="Establishment Year">@Html.DisplayFor(modelItem => item.Establishment_Year)</span>
                                @Html.HiddenFor(modelItem => item.University_ID)
                                <div class="hom-list-share">
                                    <ul>
                                        <li><a href="@Url.Content("~/UploadedDocs/FeeFixation/"+item.University_ID+".pdf")"><i class="fa fa-bar-chart" aria-hidden="true"></i> Fee fixations</a> </li>                                       
                                        <li><a href="@Url.Action("UniversityFees", "Home", new { id = item.University_ID})"><i class="fa fa-bar-chart" aria-hidden="true"></i> Fees</a> </li>
                                        <li><a href="@Url.Action("UniversityProfile", "Home", new { id = item.University_ID})"><i class="fa fa-eye" aria-hidden="true"></i>About</a> </li>
                                        <li>
                                            @*<a href="@Url.Action("UniversityCourseList", "Home", new { id = item.University_ID})">
                                                <i class="fa fa-share-alt" aria-hidden="true"></i> Courses
                                            </a>*@
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

