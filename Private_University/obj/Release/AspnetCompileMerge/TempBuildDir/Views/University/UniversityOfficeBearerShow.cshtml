@model IEnumerable<Private_University.Models.University_office_bearer>

@{
    ViewBag.Title = "UniversityOfficeBearerShow";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i>Home</a>
        </li>
        <li class="active-bre">
            <a href="#">Dashboard</a>
        </li>
        <li class="page-back">
            <a href="@Url.Action("UniversityOfficeBearer","University")"><i class="fa fa-backward" aria-hidden="true"></i>Back to Add Office Bearer</a>
        </li>
    </ul>
</div>
@{
    if (TempData["Msg"] != null)
    {
        @Html.Raw(TempData["Msg"])

    }
}

<!--== DASHBOARD INFO ==-->
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>BEARER LIST</h4>
                    @*<p>All about courses, program structure, fees, best course lists (ranking), syllabus, teaching techniques and other details.</p>*@
                </div>
                <div class="tab-inn">
                    <div class="row">
                        <p class="col-lg-4 col-md-4 col-sm-6">
                            @Html.ActionLink("Add New Bearer", "UniversityOfficeBearer", new { }, new { @class = "waves-effect waves-light light-btn waves-input-wrapper waves-button-input" })
                        </p>
                    </div>
                    <div class="row">

                        <div class="table-responsive table-desi">
                            <table class="table table-hover">

                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name) /  @Html.DisplayNameFor(model => model.Designation)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Other)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Picture)
                                        </th>
                                        <th>Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.count)
                                                @Html.HiddenFor(modelItem => item.office_bearer_ID)
                                            </td>
                                            <td>
                                                <a>
                                                    <span class="list-enq-name">@Html.DisplayFor(modelItem => item.Name)</span>
                                                    <span class="list-enq-city">@Html.DisplayFor(modelItem => item.Designation)</span>
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Other)
                                            </td>
                                            <td>
                                                <span class="label label-success">
                                                    <a href="~/UniversityBearer/@item.Picture" target="_blank" style="color:white">view</a>
                                                </span>
                                            </td>
                                            <td>
                                                @Html.ActionLink("UniversityOfficeDelete", "UniversityOfficeDelete", new { id = item.office_bearer_ID }, new { @class = "ad-st-view", onclick = "return confirm('Are sure you wants to delete this reocrd..?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



