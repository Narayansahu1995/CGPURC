@model Private_University.Models.MasterUniversity
@using Private_University.Models;
@{
    ViewBag.Title = "AddMasterUniversity";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> University Details</a>
        </li>
        <li class="page-back">
            <a href="@Url.Action("UniversityList","Commission") "><i class="fa fa-backward" aria-hidden="true"></i> University List</a>
        </li>
    </ul>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp admin-form">
                <div class="inn-title">
                    <h4>Add University Informations</h4>
                </div>
                <div class="tab-inn">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        AuthenticationResponse ARespo = (AuthenticationResponse)Session["AuthResponse"];
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.University_Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.University_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.University_Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-6 col-md-6">
                                    <input type="submit" value="Submit" class="waves-effect waves-light light-btn waves-input-wrapper waves-button-input" />
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.Entry_By, new { Value = ARespo.Login_ID })


                            @Html.Raw(TempData["msg"])
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

